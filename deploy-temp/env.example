# Maclock 环境变量配置示例
# 复制此文件为 .env.local 并填入实际值

# 应用 URL
NEXT_PUBLIC_URL=http://localhost:3000

# Stripe 配置
STRIPE_SECRET_KEY=sk_test_你的Stripe密钥
NEXT_PUBLIC_STRIPE_PRICE_ID=price_你的价格ID
STRIPE_WEBHOOK_SECRET=whsec_你的Webhook签名密钥

# 数据库配置
DATABASE_URL=postgresql://用户名:密码@localhost:5432/数据库名

# Clerk 认证配置
CLERK_PUBLISHABLE_KEY=pk_test_你的Clerk公钥
CLERK_SECRET_KEY=sk_test_你的Clerk密钥

# Clerk 路由配置
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# 4PX 物流跟踪
FOURPX_API_KEY=your_4px_app_key
FOURPX_API_SECRET=your_4px_app_secret
FOURPX_CUSTOMER_CODE=your_4px_customer_code
FOURPX_TRACKING_METHOD=transfer.order.tracking
FOURPX_SANDBOX=false

# 4PX 发件人信息（用于创建订单）
FOURPX_SENDER_NAME=Hello1984
FOURPX_SENDER_PHONE=13800138000
FOURPX_SENDER_EMAIL=support@hello1984.com
FOURPX_SENDER_COUNTRY=CN
FOURPX_SENDER_STATE=Guangdong
FOURPX_SENDER_CITY=Shenzhen
FOURPX_SENDER_ADDRESS=Shenzhen Warehouse
FOURPX_SENDER_ZIP=518000

# 管理员认证（可选，用于增强安全性）
ADMIN_SESSION_SECRET=change-this-secret-key-in-production

# 邮件服务配置（可选）
# 支持: console (开发环境，仅打印), resend (使用Resend服务)
EMAIL_SERVICE=console
EMAIL_FROM=noreply@hello1984.com
RESEND_API_KEY=your_resend_api_key

# 产品配置
NEXT_PUBLIC_PRODUCT_PRICE=29900
DEFAULT_STOCK=100
